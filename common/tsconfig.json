{
    "compilerOptions": {
        "rootDir": ".",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "noEmit": true,
    },
    "include": [
        "lib/**/*.ts",
        "bin/**/*.ts"
    ]
}