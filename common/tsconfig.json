{
    "compilerOptions": {
        "outDir": "dist/",
        "rootDir": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "esnext"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ]
}